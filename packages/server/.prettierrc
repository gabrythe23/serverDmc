{
  "singleQuote": true,
  "trailingComma": "all",
  "printWidth": 100,
  "tabWidth": 2,
  "semi": true,
  "bracketSpacing": true,
  "arrowParens": "always",
  "endOfLine": "lf",
  "overrides": [
    {
      "files": "*.md",
      "options": {
        "printWidth": 80,
        "tabWidth": 2,
        "semi": false,
        "bracketSpacing": false,
        "arrowParens": "avoid",
        "endOfLine": "lf"
      }
    }
  ],
  "proseWrap": "always"
}
